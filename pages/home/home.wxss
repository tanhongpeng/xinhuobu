/* 整体容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题样式 */
.page-title {
  font-size: 32px;
  font-weight: bold;
  margin-bottom: 50px;
}

/* 按钮组样式 */
.button-group {
  width: 80%;
}

/* 按钮样式 */
button {
  width: 100%;
  height: 50px;
  margin-bottom: 20px;
  background-color: #FF6B35;
  color: white;
  font-size: 18px;
  border: none;
  border-radius: 5px;
}