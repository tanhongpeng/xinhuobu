.splash {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #fff;
}

.quote {
  font-size: 20px;
  color: #333;
  margin-bottom: 20px;
}

.loading-bar {
  width: 80%;
  height: 20px;
  background-color: #eee;
  border-radius: 10px;
  overflow: hidden;
}

.progress {
  height: 100%;
  background-color: #FF6B35;
  border-radius: 10px;
}