/* 新增字体相关样式 */
.quote-text {
  font-family: 'WenKai', sans-serif; /* 优先使用霞鹜文楷 */
  font-size: 32rpx;
  color: #3E2723; /* 砚台黑 */
  text-align: center;
  margin-top: 40rpx;
}

/* 错误提示样式优化 */
.error-message {
  font-family: system-ui, sans-serif; /* 系统默认字体保底 */
  color: #C44536; /* 薪火红 */
}

.launch-container {
  height: 100vh;
  background: #FF6B35; /* 工程橙主色调 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-animation {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.ink-line {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 8rpx solid transparent;
  border-top-color: #C44536; /* 薪火红 */
  border-radius: 50%;
  animation: ink-spread 1.5s infinite linear;
}

@keyframes ink-spread {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.progress-text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: #FFFFFF;
  font-size: 36rpx;
  font-family: 'WenKai', sans-serif;
}

.error-box {
  margin-top: 40rpx;
  padding: 20rpx;
  background: rgba(0,0,0,0.7);
  border-radius: 16rpx;
}

.error-text {
  color: #FFFFFF;
  font-size: 28rpx;
}

.quote-text {
  position: absolute;
  bottom: 100rpx;
  color: rgba(255,255,255,0.5);
  font-size: 24rpx;
  font-family: 'WenKai', sans-serif;
}